.Home
    overflow hidden
    background-color #999


    &-search
        background-image url('../img/background.jpg')
        background-size cover
        height 100vh
        
        &-cover
            width 100%
            height 100%
            background rgba(0,0,0,0.7)
            
        &-form
            // color #FFF
            overflow hidden
            position relative
            top 30%

            h1
                margin-bottom 20px
                font-size 2.5rem
                color #FFF
                text-align center
                
            ng-autocomplete
                position relative
                display block

                .suggest
                    position absolute
                    z-index 10
                    margin -5px 0 0 0
                    padding 5px 0 0 0
                    width 100%
                    background-color #FFF
                    border 1px #CCC solid
                    border-top 0px;
                    border-radius(4px)

                    .suggest-element
                        display block
                        text-align left
                        padding 10px 
                        
                        &:hover
                            background-color #F9F9F9 


            .btn
                width 100%